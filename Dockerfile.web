# Estágio de build do Flutter Web
FROM debian:bookworm-slim AS builder

# Instalar dependências necessárias
RUN apt-get update && apt-get install -y \
    curl \
    git \
    unzip \
    xz-utils \
    zip \
    libglu1-mesa \
    && rm -rf /var/lib/apt/lists/*

# Instalar Flutter (versão estável mais recente)
ENV FLUTTER_VERSION=3.38.3
ENV FLUTTER_HOME=/opt/flutter
ENV PATH="${FLUTTER_HOME}/bin:${PATH}"

RUN curl -O https://storage.googleapis.com/flutter_infra_release/releases/stable/linux/flutter_linux_${FLUTTER_VERSION}-stable.tar.xz \
    && tar xf flutter_linux_${FLUTTER_VERSION}-stable.tar.xz -C /opt \
    && rm flutter_linux_${FLUTTER_VERSION}-stable.tar.xz \
    && flutter doctor -v \
    && flutter config --enable-web --no-analytics

WORKDIR /app

# Copiar pubspec para cache de dependências
COPY pubspec.yaml ./
COPY pubspec.lock* ./

# Baixar dependências
RUN flutter pub get

# Copiar código fonte
COPY . .

# Build da aplicação Flutter Web em modo release
RUN flutter build web --release --web-renderer canvaskit

# Estágio de produção com nginx
FROM nginx:1.25-alpine

# Copiar arquivos do build para o nginx
COPY --from=builder /app/build/web /usr/share/nginx/html

# Copiar configuração customizada do nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expor porta 80
EXPOSE 80

# Healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --quiet --tries=1 --spider http://localhost/health || exit 1

CMD ["nginx", "-g", "daemon off;"]
